<!--Carousels of different sections of clothes-->

<!--Carousel for accessories-->
<div class = "clothes_carousel">
	<div id="accessories_slides" class="carousel slide" data-ride="carousel" data-interval="false">
		<!-- Indicators -->
		<ol class="carousel-indicators">
			<li data-target="#accessories_slides" data-slide-to="0" class="active"></li>
			<li data-target="#accessories_slides" data-slide-to="1"></li>
			<li data-target="#accessories_slides" data-slide-to="2"></li>
		</ol>

		<!-- Wrapper for slides -->
		<div class="carousel-inner">
			<div class="item active">
				<img src="http://via.placeholder.com/350x150" alt="Los Angeles">
			</div>

			<div class="item">
				<img src="http://via.placeholder.com/350x150" alt="Chicago">
			</div>

			<div class="item">
				<img src="http://via.placeholder.com/350x150" alt="New York">
			</div>
		</div>

		<!-- Left and right controls -->
		<a class="left carousel-control" href="#accessories_slides" data-slide="prev">
			<span class="glyphicon glyphicon-chevron-left"></span>
			<span class="sr-only">Previous</span>
		</a>
		<a class="right carousel-control" href="#accessories_slides" data-slide="next">
			<span class="glyphicon glyphicon-chevron-right"></span>
			<span class="sr-only">Next</span>
		</a>
	</div>
</div>



